<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/alarm_settings"
    android:orientation="vertical"
    android:gravity="top">

    <RelativeLayout
        android:id="@+id/relativee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_alarm_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="장소"
            android:layout_marginLeft="30dp"
            android:textColor="#585858"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_weight="1"
            android:text="날짜"
            android:textColor="#585858"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_alarm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="내용"
        android:layout_below="@id/relativee"
        android:textColor="#050505"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switch_alarm_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="320dp"
        android:layout_weight="1"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track_selector" />
</RelativeLayout>